---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Frame from '../components/Frame.astro';
import Mint from '../components/Mint.astro';
import * as million from 'Million';

console.log(million.CONTRACT_ID)
const FakeWallet = {
  isConnected: function()  { return false },
}
let total = await million.totalSupply({wallet: FakeWallet});

const table = [];
for (let i = 0; i < total; i++) {
  try {
  let turi = await million.tokenUri({token_id: i}, {wallet: FakeWallet});
  let ru = await fetch(turi);
  let data = await ru.json();

    table.push({
      id: "0x" + i.toString(16).padStart(3, '0'),
      uri: data.home_page,
      owner: await million.ownerOf({token_id: i}, {wallet: FakeWallet}),
      image: data.image,
      coords: data.coords,

    })
  } catch {}
}

